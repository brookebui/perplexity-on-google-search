{
  "manifest_version": 3,
  "name": "Perplexity for Google Search",
  "version": "1.0",
  "description": "Forget Google's AI overviewsâ€”start a Perplexity thread every time you search on Google!",
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/search*",
        "https://google.com/search*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/perplexity-logo.webp", "assets/FKGrotesk-Regular.ttf"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "perplexity_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.webp",
      "48": "assets/icon.webp",
      "128": "assets/icon.webp"
    }
  }
}