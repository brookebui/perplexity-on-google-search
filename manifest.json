{
  "manifest_version": 3,
  "name": "Perplexity for Google Search: Start a Perplexity thread every time you search on Google!",
  "version": "1.0",
  "description": "Replace the AI overview from Google search with Perplexity!",
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/perplexity-logo.webp", "assets/FKGrotesk-Regular.ttf"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.webp",
      "48": "assets/icon.webp",
      "128": "assets/icon.webp"
    }
  }

}